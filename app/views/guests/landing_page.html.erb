<div class="w-full h-full bg-black text-white">
  <div class="max-w-5xl mx-auto pt-12">
    <div class="flex flex-col w-full items-center space-y-2">

        <%= form_with url: "/subscribe", method: :post, class: 'flex' do |form| %>
          <%= form.label :email, "email:", class: "bg-black text-black my-auto py-2 pl-4 pr-2 rounded-l-full border-l border-t border-b font-serif text-lg text-white" %>
          <%= form.email_field :email, class: "bg-black border-t border-b px-2 border-white font-serif focus:outline-none" %>
          <%= form.submit "subscribe", class: "w-full px-4 py-2 bg-black text-white rounded-r-full hover:bg-white hover:text-black hover:border-white border border-white font-bold text-lg" %>

        <% end %>

        <% if notice %>
          <p><%= notice %></p>
        <% end %>
    </div>


    
    <div class="relative w-full h-0" style="padding-bottom: 56.25%;">
      <iframe class="absolute inset-0 h-full w-full" src="https://www.youtube.com/embed/Rn_IpNhFEos" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen>
      </iframe>
    </div>
  </div>
</div>

